# Stage 1: Build the frontend
FROM node:18-alpine AS build

WORKDIR /app
COPY ./frontend/package*.json ./
RUN npm install

COPY ./frontend /app
RUN npm run build

# Stage 2: Serve the built assets with Nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

